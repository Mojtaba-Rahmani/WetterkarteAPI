@model WebClientAnwendung.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
      <div class="row">
            <div class="col-md-4"> </div>
    <div class="col-md-4">
        <h1>Anmeldung</h1>

      <h5>WetterKarte </h5>
<hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nutzername" class="control-label"></label>
                <input asp-for="Nutzername" class="form-control" />
                <span asp-validation-for="Nutzername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwort" class="control-label"></label>
                <input asp-for="Passwort" class="form-control" />
                <span asp-validation-for="Passwort" class="text-danger"></span>
            </div><br />
            <div class="form-group ">
                <input type="submit" value="Anmeldung" class="btn btn-primary" />
            </div>
             <div class="form-group ">
               Sie können sich mit dem Standardbenutzer anmelden : 
                    Nutzername = admin
                    Passwort = 123
                 </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
